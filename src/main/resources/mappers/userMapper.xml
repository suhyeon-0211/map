<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.map.user.dao.UserDAO">
	<select id="existLoginId" resultType="boolean">
		SELECT
			count(1)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<insert id="insertUser" parameterType="com.map.user.model.User">
		INSERT INTO `user`
		(
			`loginId`
			,`password`
			,`name`
			,`email`
		)
		VALUES
		(
			#{loginId}
			,#{password}
			,#{name}
			,#{email}
		)
	</insert>
	
	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.map.user.model.User">
		SELECT
			`id` 
			,`loginId`
			, `password`
			, `name`
			, `email`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE 
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
</mapper>